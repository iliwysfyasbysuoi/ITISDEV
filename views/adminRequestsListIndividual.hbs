                            <td>1500</td>
                            <td>softbound</td>
                            <td>???</td>
                            <td>2020</td>
                            <td>Standard</td>
                            <td>EWAN</td>
                            <td>pubEWAN</td>
                            <td>1</td>
                            <td>2.5</td>
                            <td><button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#sendPaymentForm">Fulfill</button></td>
                        </tr>
                        
                    </tbody>
                </table>


            </div>
        </div>

    </div>

{{!-- Modal for fulfilment --}}
    <div class="modal fade" id="sendPaymentForm" tabindex="-1" role="dialog" aria-labelledby="sendPaymentFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="sendPaymentFormTitle">Fulfill Request Form</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form name = "Fulfillment-Form">
            <div class="form-group row">
                <label for="Request Number" class="col-sm-5 col-form-label">Request Number</label>
                <div class="col-sm-7">
                <input type="text" readonly class="form-control-plaintext" id="FulfillRequestNumber" value="0123456789">
                </div>
            </div>
            <div class="form-group row">
                <label for="requester" class="col-sm-5 col-form-label">Requester</label>
                <div class="col-sm-7">
                <input type="text" readonly class="form-control-plaintext" id="FulfillReqeuster" value="John Smith">
                </div>
            </div>
            <div class="form-group row">
                <label for="Book title" class="col-sm-5 col-form-label">Book Title</label>
                <div class="col-sm-7">
                <input type="text" readonly class="form-control-plaintext" id="FulfillBookTitle" value="Animal Farm">
                </div>
            </div>
            <div class="form-group row">
                <label for="Author" class="col-sm-5 col-form-label">Author/s
                </label>
                <div class="col-sm-7">
                <input type="text" readonly class="form-control-plaintext" id="FulfillAuthor" value="George ORwell">
                </div>
            </div>
            <div class="form-group row">
                <label for="Author" class="col-sm-5 col-form-label">Book Item Reference ID
                </label>
                <div class="col-sm-7">
                <input type="text" class="form-control" id="FulfillBookID" placeholder="">
                </div>
            </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-danger">Send</button>
        </div>
        </div>
    </div>
    </div>
{{!-- END Modal for fulfillment --}}

    





</body>
</html>