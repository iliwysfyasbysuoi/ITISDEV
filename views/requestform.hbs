<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <script src="/js/requestform.js" type="text/javascript"></script>
    <title>Book Request | Chapter One</title>
</head>
<body>
    {{!-- NAVBARS START --}}
    <div id= "navvisit">
        {{> navvisit}}
    </div>
    <div id = "navadmin">
         {{> navadmin}}
    </div>
    <div id = "navuser">
       {{> navuser}}
    </div>
    {{!-- NAVBARS END --}}
<div id="request">
  <!-- <h4 class="text-center text-white pt-5">Sign Up form</h4> -->
  <br>
  <div class="container">
      <div id="request-row" class="row justify-content-center align-items-center">
          <div id="request-column" class="col-md-6">
              <div id="request-box" class="col-md-12">
                  <form id="request-form" class="form" method="post">
                      <h3 class="text-center" style="color:#DB4E35">Book Request</h3>
                      <div class="form-group">
                          <label for="btitle" style="color:#DB4E35">Book Title</label><br>
                          <input type="text" name="title" id="title" class="form-control"><!--required-->
                          <p id="titleError" class="error">{{titleError}}</p>
                      </div>
                      <div class="form-group">
                        <label for="authors" style="color:#DB4E35">Author(s)</label><br>
                        <input type="text" name="authors" id="authors" class="form-control"><!--required + can add more authors?-->
                        <p id="authorsError" class="error">{{authorsError}}</p>
                      </div>
                      <div class="form-group">
                        <label for="description" style="color:#DB4E35">Description</label><br>
                        <textarea type="text" name="description" id="description" class="form-control" style = "resize: none; height: 100px"></textarea>
                        <p id="desError" class="error">{{desError}}</p>
                      </div>
                      <div class="form-group">
                        <label for="price" style="color:#DB4E35">Price willing to pay</label><br>
                        <input type="number" name="price" id="price" class="form-control">
                        <p id="priceError" class="error">{{priceError}}</p>
                      </div>
                      <div class="form-group">
                        <label for="quantity" style="color:#DB4E35">Quantity</label><br>
                        <input type="number" name="quantity" id="quantity" class="form-control">
                        <p id="qtyError" class="error">{{qtyError}}</p>
                      </div>
                      <div class="form-group">
                        <label for="isUrgent" style="color:#DB4E35">Urgent</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input class="form-check-input position-static" type="checkbox" name="isUrgent" id="isUrgent" value="Yes" >
                      </div>
                      <div class="form-group">
                          <input type="submit" name="submit" id="submit" class="btn text-white btn-md" style="background-color:#DB4E35" value="Submit" disabled>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>


  
</div>
</body>
</html>