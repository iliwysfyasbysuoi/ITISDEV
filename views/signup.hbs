<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    
    <script src="/js/signup.js" type="text/javascript"></script>
    <script src="/js/validator.min.js" type='text/javascript'></script>
    
    <title>Sign Up | Chapter One</title>
</head>
<body>
    {{!-- NAVBARS START --}}
    <div id= "navvisit">
        {{> navvisit}}
    </div>
    <div id = "navadmin">
         {{> navadmin}}
    </div>
    <div id = "navuser">
       {{> navuser}}
    </div>
    {{!-- NAVBARS END --}}
    <div id="signup">
        <!-- <h4 class="text-center text-white pt-5">Sign Up form</h4> -->
        <br>
        <div class="container">
            <div id="signup-row" class="row justify-content-center align-items-center">
                <div id="signup-column" class="col-md-6">
                    <div id="signup-box" class="col-md-12">
                        <form id="signup-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Sign Up</h3>
                            <div class="form-group">
                                <label for="fname" class="text-info">First Name:</label><br>
                                <input type="text" name="fname" id="fname" class="form-control" required>
                                <p id="fNameError" class="error">{{fNameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="lname" class="text-info">Last Name:</label><br>
                                <input type="text" name="lname" id="lname" class="form-control" required>
                                <p id="lNameError" class="error">{{lNameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <input type="text" name="username" id="username" class="form-control" required>
                                <p id="usernameError" class="error">{{usernameError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="email" class="text-info">Email Address:</label><br>
                                <input type="email" name="email" id="email" class="form-control" required>
                                <p id="emailError" class="error">{{emailError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" required>
                                <p id="pwError" class="error">{{pwError}}</p>
                            </div>
                            <div class="form-group">
                                <label for="submit" class="text-danger">{{{err}}}</label><br>
                                <input type="submit" name="submit" id='submit' class="btn btn-info btn-md" value="Submit" disabled>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>