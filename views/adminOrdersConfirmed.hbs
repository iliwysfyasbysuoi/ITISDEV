<!DOCTYPE html>
<html lang="en">
<head>
    {{>head}}
    <link rel="stylesheet" href="../css/messagesStyle.css">
    <title>Orders List</title>
</head>
<body>
    {{!-- NAVBARS START --}}
    <div id= "navvisit">
        {{> navvisit}}
    </div>
    <div id = "navadmin">
         {{> navadmin}}
    </div>
    <div id = "navuser">
       {{> navuser}}
    </div>
    {{!-- NAVBARS END --}}

    <div class="container-fluid-nopadding" >
        <div class="card text-center">
            <div class="card-header-center bg-light">
                <h4>Orders List</h4>
            </div>

            <div class="card-header card-header-tabs bg-light">
                <ul class="nav nav-tabs  bg-light">
                    <li class="nav-item ">
                        <a class="nav-link " href="/Orders/Pending">Payment Pending</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Orders/Processing">Payment Processing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Orders/Confirmed">Confirmed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/Orders/Cancelled">Cancelled</a>
                    </li>
                </ul>
            </div>
                

            <div class="card-body-orders  overflow-auto vh80"  >
                


                <table class=" table table-bordered table-hover ">
                    <thead class="thead-light">
                        <tr>
                            <th >Order Number</th>
                            <th style="min-width: 300px">Order Details</th>
                            <th>Shipping Details</th>
                            <th style="min-width: 250px">Payment Details</th>
                            <th >Total Amount</th>
                            <th >Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                            <tr>
                                <th scope="row">{{order_ID}}</th>
                                <td>
                                    <table class=" table ">
                                    <tr>
                                        <th >Book </th>
                                        <th>Author/s</th>
                                        <th >Quality</th>
                                        <th >Edition</th>
                                        <th >Type</th>
                                        <th >Qty</th>
                                        <th> Price</th>
                                    </tr>
                                    {{#each items}}
                                    <tr>
                                        <td >{{title}} </td>
                                        <td> {{author}} </td>
                                        <td >{{quality}}</td>
                                        <td >{{edition}}</td>
                                        <td >{{type}}</td>
                                        <td >{{quantity}}</td>
                                        <td> {{price}}</td>
                                    </tr>
                                    {{/each}}
                                </table>
                                </td>
                                <td align = "left">
                                    {{#with shippingdetails}}
                                        <Strong>Full Name: </Strong>{{fullname}} <br>
                                        <Strong>Contact no:</Strong> {{contactNum}} <br>
                                        <Strong>Shipping Address:</Strong> {{address}}, {{barangay}}, {{city}}, {{zip}}
                                    {{/with}}
                                </td>
                                <td align = "left"> 
                                    {{#with paymentdetails}}
                                        <Strong>Bank Name:</Strong> {{bank_name}} <br>
                                        <Strong>Reference No.:</Strong> {{ref_num}} <br>
                                        <a href= "../img/{{proof_image}}" target="_blank"><img src="../img/{{proof_image}}" style = "max-width: 200px;"></a>
                                    {{/with}}
                                </td>
                                <td>{{totalamount}}</td>
                                <td>{{status}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>


            </div>
        </div>

    </div>





</body>
</html>